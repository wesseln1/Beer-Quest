@model Beer_Quest.Models.Brewery

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Brewery</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheersCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheersCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Drinks)
        </dt>
        <dd class="col-sm-10">
            <div>
                @foreach(var drink in Model.Drinks)
                {
                    <li>@Html.DisplayFor(model => drink.Name) (@Html.DisplayFor(model => drink.AlcoholPercent)% ALC/VOL)</li>
                }
            </div>
        </dd>
    </dl>
</div>
<div>
   @if(Model.User.UserTypeId == 1 || Model.User.UserTypeId == 2)
   {
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit |</a>
   }
    <a asp-action="Index">Back to List</a>
</div>
