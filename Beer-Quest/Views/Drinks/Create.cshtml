@model Beer_Quest.Models.Drink

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Drink</h4>
<hr />
<div class="create-card-div">
    <div class="create-card">
        <h3 class="card-header card-header-footer">Create Drinks</h3>
        <div class="row">
            <div style="width: 50%; margin-left: 40px;">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AlcoholPercent" class="control-label"></label>
                        <input asp-for="AlcoholPercent" class="form-control" />
                        <span asp-validation-for="AlcoholPercent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DrinkTypeId" class="control-label"></label>
                        <select asp-for="DrinkTypeId" class="form-control" asp-items="ViewBag.DrinkTypeId"></select>
                    </div>
                    <div class="form-group">
                        <input asp-for="BreweryId" class="form-control" asp-items="@ViewBag.BreweryId" hidden />
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="HouseFav" /> @Html.DisplayNameFor(model => model.HouseFav)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="card-body card-header-footer">
            <a asp-action="Details" asp-controller="Breweries" asp-route-id="@ViewBag.BreweryId">Back to List</a>
        </div>
    </div>
</div>

